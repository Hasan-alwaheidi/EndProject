@model FootballApiProject.Models.DTO_s.StadiumsDto.StadiumDetailsDto

<!-- Custom styling for the stadium details -->
<style>
    /* Container setup for minimum height and flex */
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .content-wrapper {
        flex: 1;
    }

    .stadium-card {
        border: 2px solid #003366;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        height: 400px; /* Increased height */
    }

        .stadium-card:hover {
            transform: translateY(-10px);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
        }

    .card-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .card-body {
        padding: 30px;
        background-color: #f8f9fa;
    }

    .card-title {
        font-size: 32px; /* Increased font size */
        color: #003366;
        font-weight: bold;
    }

    .card-text strong {
        color: #007bff;
    }

    .teams-list {
        padding-left: 20px;
    }

    .btn-secondary {
        background-color: #003366;
        border-color: #003366;
        color: #fff;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #001f4d;
            transform: translateY(-2px);
        }

    .back-btn {
        margin-top: 20px;
    }

    /* Fixed footer styling */
    footer.footer {
        background-color: #003366;
        color: white;
        width: 100%;
        position: fixed;
        bottom: 0;
        left: 0;
        padding: 10px 0;
        text-align: center;
    }

</style>

<div class="content-wrapper container mt-5">
    <div class="card stadium-card">
        <div class="row no-gutters">
            <div class="col-md-5">
                <img src="@Model.ImagePath" class="card-img" alt="@Model.Name" />
            </div>
            <div class="col-md-7">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">
                        <strong>Location:</strong> @Model.Location
                    </p>
                    <p class="card-text">
                        <strong>Capacity:</strong> @Model.Capacity
                    </p>
                    <h6><strong>Teams:</strong></h6>
                    <ul class="teams-list">
                        @foreach (var team in Model.Teams)
                        {
                            <li>@team.Name - <em>Coach: @team.Coach</em></li>
                        }
                    </ul>
                    <p class="card-text">
                        <strong>Description:</strong> @Model.Description
                    </p>
                </div>
            </div>
        </div>
    </div>
    <a href="@Url.Action("Index", "UserStadiums")" class="btn btn-secondary back-btn">Back to List</a>
</div>

<!-- Fixed footer -->
<footer class="footer">
    <div class="container">
        <span>© 2024 Football Management System. All rights reserved.</span>
    </div>
</footer>
