@model FootballApiProject.Models.DTO_s.MatchsDto.MatchDetailsDto

<h2>Delete Match</h2>

<div>
    <h4>Are you sure you want to delete this match?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Home Team</dt>
        <dd class="col-sm-10">@Model.HomeTeamName</dd>
        <dt class="col-sm-2">Away Team</dt>
        <dd class="col-sm-10">@Model.AwayTeamName</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>
        <dt class="col-sm-2">Score</dt>
        <dd class="col-sm-10">@Model.Score</dd>
        <dt class="col-sm-2">Result</dt>
        <dd class="col-sm-10">@Model.Result</dd>
    </dl>
</div>

<form asp-action="Delete" method="post" onsubmit="return confirmDelete();">
    <input type="hidden" asp-for="MatchId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

<script type="text/javascript">
    function confirmDelete() {
        return confirm("Are you sure you want to delete this match?");
    }
</script>
