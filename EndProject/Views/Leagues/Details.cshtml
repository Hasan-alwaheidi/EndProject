@model FootballApiProject.Models.DTO_s.LeaguesDto.LeagueDetailsDto

@{
    ViewData["Title"] = "League Details";
}

<h2>League Details</h2>

<div>
    <h4>League</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country</dd>
        <dt class="col-sm-2">Season</dt>
        <dd class="col-sm-10">@Model.Season</dd>
        <dt class="col-sm-2">Logo</dt>
        <dd class="col-sm-10"><img src="@Model.LogoPath" alt="League Logo" style="width:100px; height:auto;" /></dd>
        <dt class="col-sm-2">Teams</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var team in Model.Teams)
                {
                    <li>@team.Name</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.LeagueId" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
