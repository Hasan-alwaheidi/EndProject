@model FootballApiProject.Models.DTO_s.LeaguesDto.LeagueDetailsDto

<h2>Delete League</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country</dd>
        <dt class="col-sm-2">Season</dt>
        <dd class="col-sm-10">@Model.Season</dd>
        <dt class="col-sm-2">Description</dt> 
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Teams</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var team in Model.Teams)
                {
                    <li>@team.Name</li>
                }
            </ul>
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post" onsubmit="return confirmDelete();">
    <input type="hidden" asp-for="LeagueId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

<script type="text/javascript">
    function confirmDelete() {
        return confirm("Are you sure you want to delete this league?");
    }
</script>
