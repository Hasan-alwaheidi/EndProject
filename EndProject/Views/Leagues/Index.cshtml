@model IEnumerable<FootballApiProject.Models.DTO_s.LeaguesDto.LeagueDto>

@{
    ViewData["Title"] = "Leagues";
}

<h2>Leagues</h2>
<div class="text-right mb-4">
    <a href="@Url.Action("Dashboard", "AdminDashboard")" class="btn btn-secondary">Back to Dashboard</a>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New League</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>League Name</th>
            <th>Country</th>
            <th>Season</th>
            <th>Logo</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var league in Model)
        {
            <tr>
                <td>@league.Name</td>
                <td>@league.Country</td>
                <td>@league.Season</td>
                <td><img src="@league.LogoPath" alt="League Logo" style="width:100px; height:auto;" /></td>
                <td>
                    <a asp-action="Details" asp-route-id="@league.LeagueId" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="Edit" asp-route-id="@league.LeagueId" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@league.LeagueId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
