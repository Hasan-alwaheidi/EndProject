@using FootballApiProject.Models.DTO_s
@model IEnumerable<TeamDto>

<h2>Teams</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Coach</th>
            <th>Stadium</th>
            <th>League</th>
            <th>Logo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
                <td>@Html.ActionLink(team.Name, "Details", new { id = team.TeamId })</td>
                <td>@team.Coach</td>
                <td>@team.StadiumName</td>
                <td>@team.LeagueName</td>
                <td><img src="@team.LogoPath" alt="Team Logo" width="100" /></td>
            </tr>
        }
    </tbody>
</table>
