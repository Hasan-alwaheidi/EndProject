@using EndProject.Models
@model object

@{
    var homeViewModel = Model as HomeViewModel;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Football Management System</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .content-wrapper {
            flex: 1;
        }

        .navbar-custom {
            background-color: darkblue;
            z-index: 1000;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Secondary Navbar Styling */
        .navbar-secondary {
            background-color: darkblue;
            z-index: 999;
      /*        margin-top: 56px; /* Adjust this value if your primary navbar height changes */ */
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.08);
        }

            .navbar-secondary .nav-link {
                color: white;
                font-weight: bold;
                transition: background-color 0.3s ease, color 0.3s ease;
            }

                .navbar-secondary .nav-link:hover {
                    background-color: darkgoldenrod;
                    color: white;
                    border-radius: 4px;
                }

        /* News Ticker */
        .news-ticker {
            background-color: darkgoldenrod;
            color: #fff;
            padding: 10px 0;
            font-size: 18px;
        }

        /* Slideshow */
        #mediaCarousel {
            max-height: 250px;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            #mediaCarousel .carousel-inner {
                width: 100%;
                height: 300px;
            }

            #mediaCarousel .carousel-item img {
                max-width: 100%;
                max-height: 100%;
                object-fit: cover;
                width: 100%;
                height: 100%;
            }

        /* Live Scores */
        .live-scores {
            background-color: #f8f9fa;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

            .live-scores h3 {
                margin-bottom: 15px;
                color: darkblue;
                font-weight: bold;
            }

        .league-name {
            color: darkgreen;
            margin-top: 20px;
            font-weight: bold;
            text-decoration: underline;
        }

        .table thead th {
            text-align: center;
            background-color: darkblue;
            color: white;
            font-weight: bold;
            font-size: 16px;
        }

        .table tbody td {
            text-align: center;
            vertical-align: middle;
        }

        .table-success {
            background-color: #d4edda !important;
            color: #155724;
        }

        .table-danger {
            background-color: #f8d7da !important;
            color: #721c24;
        }

        .table-hover tbody tr:hover {
            background-color: #f1f1f1;
        }

        footer.footer {
            background-color: darkblue;
            color: white;
            margin-top: auto;
            padding: 10px 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
            <a class="navbar-brand text-white" href="/">Football Management System</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="@Url.Action("Login", "AdminDashboard")" class="nav-link text-white">Admin Login</a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Secondary Navbar directly below the first -->
        <nav class="navbar navbar-expand-lg navbar-secondary">
            <div class="collapse navbar-collapse" id="secondaryNavbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a href="/" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="/UserMatches" class="nav-link">Matches</a>
                    </li>
                    <li class="nav-item">
                        <a href="/UserNews" class="nav-link">News</a>
                    </li>
                    <li class="nav-item">
                        <a href="/UserTeams" class="nav-link">Teams</a>
                    </li>
                    <li class="nav-item">
                        <a href="/UserPlayers" class="nav-link">Players</a>
                    </li>
                    <li class="nav-item">
                        <a href="/UserLeagues" class="nav-link">Leagues</a>
                    </li>
                    <li class="nav-item">
                        <a href="/UserStadiums" class="nav-link">Stadiums</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    @if (homeViewModel?.NewsItems != null && homeViewModel.NewsItems.Any())
    {
        <div class="news-ticker text-white py-2">
            <marquee behavior="scroll" direction="left">
                @foreach (var newsItem in homeViewModel.NewsItems)
                {
                    <span>@newsItem.Title | </span>
                }
            </marquee>
        </div>
    }

    @if (homeViewModel?.SlideshowImages != null && homeViewModel.SlideshowImages.Any())
    {
        <!-- Slideshow for Home Page Only -->
        <div id="mediaCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @for (int i = 0; i < homeViewModel.SlideshowImages.Count; i++)
                {
                    <li data-target="#mediaCarousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                }
            </ol>
            <div class="carousel-inner">
                @for (int i = 0; i < homeViewModel.SlideshowImages.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img src="@homeViewModel.SlideshowImages[i]" class="d-block mx-auto" alt="Image @i">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#mediaCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#mediaCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    }

    <!-- Content wrapper for all pages -->
    <div class="content-wrapper container mt-4">
        <div class="row">
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>
    </div>

    @if (homeViewModel?.LiveScores != null && homeViewModel.LiveScores.Any())
    {
        <div class="container live-scores mt-3 p-3" style="background-color: #f8f9fa; border-radius: 8px; box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);">
            <h3 class="text-center">Live Scores</h3>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Competition</th>
                        <th>Home</th>
                        <th>Score</th>
                        <th>Away</th>
                        <th>Status</th>
                        <th>Time</th> <!-- Added Time Column -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var match in homeViewModel.LiveScores)
                    {
                        var competition = match["competition"]?["name"]?.ToString();
                        var team1 = match["home"]["name"].ToString();
                        var team2 = match["away"]["name"].ToString();
                        var score = match["scores"]?["score"]?.ToString() ?? "N/A";
                        var status = match["status"].ToString();
                        var matchTime = match["time"]?.ToString() ?? "N/A";  // Extract match time

                        string statusClass = status == "IN PLAY" ? "text-success font-weight-bold" : (status == "FINISHED" ? "text-danger font-weight-bold" : "");

                        <tr>
                            <td>@competition</td>
                            <td>@team1</td>
                            <td>@score</td>
                            <td>@team2</td>
                            <td class="@statusClass">@status</td>
                            <td>@matchTime</td> <!-- Display match time -->
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }


    <footer class="footer mt-auto">
        <div class="container text-center">
            <span class="text-muted">© 2024 Football Management System. All rights reserved.</span>
            <div class="mt-3">
                <a href="#" class="text-muted mr-3"><i class="fab fa-facebook"></i></a>
                <a href="#" class="text-muted mr-3"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-muted mr-3"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>
