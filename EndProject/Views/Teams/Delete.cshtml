@model FootballApiProject.Models.DTO_s.TeamsDto.TeamDetailsDto

<h2>Delete Team</h2>

<div class="card">
    <div class="card-body">
        <h3>Are you sure you want to delete this team?</h3>

        <div class="form-group">
            <label>Name:</label>
            <p>@Model.Name</p>
        </div>

        <div class="form-group">
            <label>Coach:</label>
            <p>@Model.Coach</p>
        </div>

        <div class="form-group">
            <label>Stadium:</label>
            <p>@Model.StadiumName</p>
        </div>

        <div class="form-group">
            <label>League:</label>
            <p>@Model.LeagueName</p>
        </div>

        <div class="form-group">
            <label>Logo:</label>
            <img src="@Model.LogoPath" alt="@Model.Name Logo" style="max-width: 100px; max-height: 100px;" />
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="TeamId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>



<script type="text/javascript">
    function confirmDelete() {
        return confirm("Are you sure you want to delete this team?");
    }
</script>
