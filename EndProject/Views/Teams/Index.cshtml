@model IEnumerable<FootballApiProject.Models.DTO_s.TeamDto>

<h2>Teams</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Team</a>
</p>
<a asp-action="dashboard" asp-controller="AdminDashboard" class="btn btn-secondary">Back to Dashboard</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Coach</th>
            <th>Stadium</th>
            <th>League</th>
            <th>Logo</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
                <td>@team.Name</td>
                <td>@team.Coach</td>
                <td>@team.StadiumName</td>
                <td>@team.LeagueName</td>
                <td>
                    <img src="@team.LogoPath" alt="@team.Name Logo" style="max-width: 100px; max-height: 100px;" />
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@team.TeamId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@team.TeamId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@team.TeamId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
