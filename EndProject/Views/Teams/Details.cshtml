@model FootballApiProject.Models.DTO_s.TeamsDto.TeamDetailsDto

<h2>Team Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Coach</dt>
        <dd class="col-sm-10">@Model.Coach</dd>

        <dt class="col-sm-2">Stadium</dt>
        <dd class="col-sm-10">@Model.StadiumName</dd>

        <dt class="col-sm-2">League</dt>
        <dd class="col-sm-10">@Model.LeagueName</dd>

        <dt class="col-sm-2">Logo</dt>
        <dd class="col-sm-10">
            <img src="@Model.LogoPath" alt="@Model.Name Logo" style="max-width: 200px; max-height: 200px;" />
        </dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.TeamId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
