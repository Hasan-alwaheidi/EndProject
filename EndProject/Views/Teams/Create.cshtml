@model FootballApiProject.Models.DTO_s.TeamsDto.CreateTeamDto

<h2>Create Team</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Coach" class="control-label"></label>
        <input asp-for="Coach" class="form-control" />
        <span asp-validation-for="Coach" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StadiumName" class="control-label"></label>
        <select asp-for="StadiumName" class="form-control" asp-items="ViewBag.Stadiums"></select>
        <span asp-validation-for="StadiumName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LeagueName" class="control-label"></label>
        <select asp-for="LeagueName" class="form-control" asp-items="ViewBag.Leagues"></select>
        <span asp-validation-for="LeagueName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LogoPath" class="control-label">Logo</label>
        <input type="file" name="logo" class="form-control" />
        <span asp-validation-for="LogoPath" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>