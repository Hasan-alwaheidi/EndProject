@model FootballApiProject.Models.DTO_s.StadiumsDto.StadiumDetailsDto

<h2>Stadium Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <img src="@Model.ImagePath" alt="@Model.Name" style="width:300px;height:auto;" />
    <dl class="row mt-3">
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>
    </dl>
</div>
<div>
    <h4>Teams</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Coach</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in Model.Teams)
            {
                <tr>
                    <td>@team.Name</td>
                    <td>@team.Coach</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.StadiumId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
