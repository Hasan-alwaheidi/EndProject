@model FootballApiProject.Models.DTO_s.StadiumsDto.StadiumDetailsDto

<h2>Delete Stadium</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>
    </dl>
</div>

<form asp-action="Delete" method="post" onsubmit="return confirmDelete();">
    <input type="hidden" asp-for="StadiumId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

<script type="text/javascript">
    function confirmDelete() {
        return confirm("Are you sure you want to delete this stadium?");
    }
</script>
