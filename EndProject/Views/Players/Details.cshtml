@model FootballApiProject.Models.DTO_s.PlayersDto.PlayerDetailsDto

@{
    ViewData["Title"] = "Player Details";
}

<h2>Player Details</h2>

<div>
    <h4>Player</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Position
        </dt>
        <dd class="col-sm-10">
            @Model.Position
        </dd>
        <dt class="col-sm-2">
            Nationality
        </dt>
        <dd class="col-sm-10">
            @Model.Nationality
        </dd>
        <dt class="col-sm-2">
            Team
        </dt>
        <dd class="col-sm-10">
            @Model.TeamName
        </dd>
        <dt class="col-sm-2">
            League
        </dt>
        <dd class="col-sm-10">
            @Model.LeagueName
        </dd>
        <dt class="col-sm-2">
            Picture
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ProfilePicturePath" alt="Player Picture" style="width:100px; height:auto;" />
        </dd>

        <!-- Add Description display -->
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PlayerId" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
