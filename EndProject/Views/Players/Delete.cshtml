@model FootballApiProject.Models.DTO_s.PlayersDto.PlayerDetailsDto

<h2>Delete Player</h2>

<h3>Are you sure you want to delete this player?</h3>
<div>
    <h4>Player</h4>
    <hr />
    <dl class="row">
        <!-- Existing fields... -->

        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>

    <form asp-action="Delete" method="post" onsubmit="return confirmDelete();">
        <input type="hidden" asp-for="PlayerId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>

@section Scripts {
    <script type="text/javascript">
        function confirmDelete() {
            return confirm("Are you sure you want to delete this player?");
        }
    </script>
}
