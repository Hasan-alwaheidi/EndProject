@model FootballApiProject.Models.DTO_s.PlayersDto.PlayerDetailsDto

@{
    ViewData["Title"] = "Delete Player";
}

<h2>Delete Player</h2>

<h3>Are you sure you want to delete this player?</h3>
<div>
    <h4>Player</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Position
        </dt>
        <dd class="col-sm-10">
            @Model.Position
        </dd>
        <dt class="col-sm-2">
            Nationality
        </dt>
        <dd class="col-sm-10">
            @Model.Nationality
        </dd>
        <dt class="col-sm-2">
            Team
        </dt>
        <dd class="col-sm-10">
            @Model.TeamName
        </dd>
        <dt class="col-sm-2">
            League
        </dt>
        <dd class="col-sm-10">
            @Model.LeagueName
        </dd>
        <dt class="col-sm-2">
            Picture
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ProfilePicturePath" alt="Player Picture" style="width:100px; height:auto;" />
        </dd>
    </dl>

    <form asp-action="Delete" method="post" onsubmit="return confirmDelete();">
        <input type="hidden" asp-for="PlayerId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>

@section Scripts {
    <script type="text/javascript">
        function confirmDelete() {
            return confirm("Are you sure you want to delete this player?");
        }
    </script>
}
