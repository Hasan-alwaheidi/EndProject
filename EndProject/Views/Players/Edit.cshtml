@using FootballApiProject.Enums
@model FootballApiProject.Models.DTO_s.PlayersDto.UpdatePlayerDto

<h2>Edit Player</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="PlayerId" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Position" class="control-label"></label>
        <select asp-for="Position" class="form-control">
            @if (ViewBag.Positions != null)
            {
                foreach (var position in ViewBag.Positions)
                {
                    <option value="@position">@position</option>
                }
            }
            else
            {
                <option value="">No positions available</option>
            }
        </select>
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nationality" class="control-label"></label>
        <input asp-for="Nationality" class="form-control" />
        <span asp-validation-for="Nationality" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TeamId" class="control-label"></label>
        <select asp-for="TeamId" class="form-control" asp-items="ViewBag.Teams"></select>
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProfilePicturePath" class="control-label">Profile Picture</label>
        <input type="file" name="profilePicture" class="form-control" />
        <span asp-validation-for="ProfilePicturePath" class="text-danger"></span>
        @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
        {
            <img src="@Model.ProfilePicturePath" alt="Profile Picture" style="max-width: 100px; max-height: 100px;" />
        }
    </div>

    <!-- Add Description field -->
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
